<table style="width: 99%" class="text-center mx-auto table mt-5 table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Country</th>
            <th scope="col">Age</th>
            <th scope="col">Last updated</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% costumers.forEach((customer, index)=> { %>
            <tr>
                <th scope="row">
                    <%= index + 1 %>
                </th>
                <td>
                    <%= customer.firstName + customer.lastName %>
                </td>
                <td>
                    <%= customer.gender %>
                </td>
                <td>
                    <%= customer.country %>
                </td>
                <td>30</td>
                <td>
                    <%= moment(customer.updatedAt).fromNow() %>
                </td>
                <td>
                    <a data-bs-toggle="tooltip" data-bs-title="View details" data-bs-placement="top"
                        class="btn btn-primary btn-sm" href="./view/<%= customer._id %>"><i class="bi bi-eye"></i></a>

                    <a data-bs-toggle="tooltip" data-bs-title="Edit user" data-bs-placement="top"
                        class="btn btn-primary btn-sm" href="./edit/<%= customer._id %>">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form style="display: inline-block;" action="/edit/<%= customer._id %>?_method=DELETE"
                        method="post">
                        <button type="submit" data-bs-toggle="tooltip" data-bs-title="Delete user"
                            data-bs-placement="top" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>